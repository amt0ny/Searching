        int ary[] = {1,2,3,4,5,6,7,8};
        int hi = ary.length-1;
        int number = 8;
        int li = 0;
        int mid = (li+hi)/2;
        while(li<=hi){
            if (ary[mid] == number){
                System.out.println("your number is at index "+ mid);
                break;
            }
            else if (number>ary[mid]){
                li = mid+1;

            }
            else if (number<ary[mid]){
                hi = mid-1;
            }
            mid = (li+hi)/2;

        }
